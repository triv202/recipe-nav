{
  "manifest_version": 2,
  "name": "Recipe Nav",
  "description": "Skip the story and get to the recipe. Recipe Nav scrolls to recipe instructions with one click of the icon.
  ",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/recipe-book-16.png",
    "32": "icons/recipe-book-32.png",
    "48": "icons/recipe-book-48.png",
    "128": "icons/recipe-book-128.png"
  },
  "browser_action": {
    "default_icon": "icons/recipe-book-32.png"
  },
  "permissions": ["activeTab"]
}
